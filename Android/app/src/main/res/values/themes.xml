<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Pink_1</item>
        <item name="colorPrimaryVariant">@color/Pink_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_2</item>
        <item name="colorSecondaryVariant">@color/red_3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>


    </style>


    <style name="MyEditTextStyle">
        <!--文本的颜色，textColor和textSize不要放到style中-->
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorControlNormal">@color/Pink_1</item>
        <item name="colorControlActivated">@color/Pink_3</item>
    </style>






</resources>