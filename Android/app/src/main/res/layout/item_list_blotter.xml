<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_blotter"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/background"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_list_blotter_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="20dp"
                android:textColor="@color/Pink_1"
                tools:text="项目名称"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/tv_list_blotter_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="2023.02.03"
                android:textSize="17dp"
                android:gravity="center|right"
                android:textColor="@color/Pink_1"/>



        </LinearLayout>

        <TextView
            android:id="@+id/tv_list_blotter_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="15dp"
            android:textColor="@color/gray"
            tools:text="项目简介  项目简介  项目简介  项目简介" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_list_blotter_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/num_add_button_ripple"
        android:visibility="visible"/>






</LinearLayout>