<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_items"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_list_items_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                tools:src="@drawable/img_null_bk"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <!-- 这是显示名称的文本视图 -->
                <TextView
                    android:id="@+id/tv_list_items_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textColor="@color/Pink_1"
                    android:textSize="20sp"
                    tools:text="物品" />

                <!-- 这是显示描述的文本视图 -->
                <TextView
                    android:id="@+id/tv_list_items_desc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    android:gravity="start|center"
                    android:textColor="@color/gray_2"
                    android:textSize="13sp"
                    tools:text="这里是简介" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_num_show"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:theme="@style/MyEditTextStyle"
                android:gravity="center"
                android:textColor="@color/Pink_1"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="20dp"
                android:hint="null"
                android:background="@drawable/num_show_bk"
                android:visibility="visible"/>


<!--            <TextView-->
<!--                android:id="@+id/tv_num_show"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginBottom="20dp"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/Pink_1"-->
<!--                android:textSize="20dp"-->
<!--                android:text="1"-->
<!--                android:background="@drawable/num_show_bk"/>-->



            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                >

                <ImageView
                    android:id="@+id/btn_num_add"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/num_add_button_ripple"/>

                <ImageView
                    android:id="@+id/btn_num_minus"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/num_minus_button_selector"/>

            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cover_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cover_image"
            android:visibility="visible"/>

    </FrameLayout>

</LinearLayout>