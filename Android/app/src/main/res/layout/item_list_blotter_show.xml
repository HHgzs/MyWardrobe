<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_blotter_show"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_list_blotter_show_img"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                tools:src="@drawable/img_null_bk"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <!-- 这是显示名称的文本视图 -->
                <TextView
                    android:id="@+id/tv_list_blotter_show_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textColor="@color/Pink_1"
                    android:textSize="19dp"
                    tools:text="衣服" />

                <!-- 这是显示描述的文本视图 -->
                <TextView
                    android:id="@+id/tv_list_blotter_show_desc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    tools:text="这里是简介" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/button_pink_ripple"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="添加" />

            <Button
                android:id="@+id/btn_info"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/button_pink_ripple"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="详情"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/cover_image" />

    </FrameLayout>

</LinearLayout>